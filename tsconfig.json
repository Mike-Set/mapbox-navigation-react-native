{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "ES2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": ".",
    "jsx": "react-jsx"
  },
  "include": ["index.ts", "MapboxNavigation.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
